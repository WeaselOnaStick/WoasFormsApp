<MudDialog>
    <TitleContent>
        <MudText>
            @if (DialogIcon != null)
            {
                <MudIcon Icon=@DialogIcon />
            }
            @DialogTitle
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            @DialogText
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@(CancelText ?? "Cacnel")</MudButton>
        <MudButton OnClick="Confirm" Color="Color.Error">@(ConfirmText ?? "Confirm")</MudButton>
    </DialogActions>
</MudDialog>

@code{
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter, EditorRequired]
    public required string DialogTitle { get; set; }

    [Parameter, EditorRequired]
    public required string DialogText { get; set; }

    [Parameter]
    public string? CancelText { get; set; }

    [Parameter]
    public string? ConfirmText { get; set; }

    [Parameter]
    public string DialogIcon { get; set; } = Icons.Material.Filled.Warning;

    private void Cancel() => MudDialog.CancelAll();

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}