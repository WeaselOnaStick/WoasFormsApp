@if (PageTitle != null)
{
    <PageTitle>@PageTitle - @loc["WOASFORMS"]</PageTitle>
}

<MudGrid Justify="Justify.Center" Class=@($"pt-{PaddingTop}")>
    @if (RenderPageTitle)
    {
        <MudItem xs="12">
            <MudText Align="Align.Center" Class="m-2 p-2" Typo="Typo.h3">@PageTitle</MudText>
        </MudItem>
    }
    <MudItem xs="10">
        <MudPaper Class=@($"p-{PaddingPaper}")>
            @ChildContent
        </MudPaper>
    </MudItem>
</MudGrid>

@code{
    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; }

    [Parameter, EditorRequired]
    public required string PageTitle { get; set; }

    [Parameter]
    public bool RenderPageTitle { get; set; } = true;

    [Parameter]
    public int PaddingTop { get; set; } = 12;

    [Parameter]
    public int PaddingPaper { get; set; } = 4;
}