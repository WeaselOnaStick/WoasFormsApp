@if (PageTitle != null)
{
    <PageTitle>@PageTitle - WoasForms</PageTitle>
}

<MudGrid Justify="Justify.Center" Class="pt-12">
    @if (RenderPageTitle)
    {
        <MudItem xs="12">
            <MudText Align="Align.Center" Class="m-2 p-2" Typo="Typo.h3">@PageTitle</MudText>
        </MudItem>
    }
    <MudItem xs="10">
        <MudPaper Class="p-4">
            @ChildContent
        </MudPaper>
    </MudItem>
</MudGrid>

@code{
    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; }

    [Parameter, EditorRequired]
    public required string PageTitle { get; set; }

    [Parameter]
    public bool RenderPageTitle { get; set; } = true;
}